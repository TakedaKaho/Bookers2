<p id="notice"></p>
<div class="container px-5 px-sm-0">
  
  <!-- User info -->
  <h2>User info</h2>

  <table class="table">
    <tbody>
      <tr>
        <td><%= image_tag user.get_profile_image(100,100) %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>Introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </tbody>
  </table>

  <% unless user.guest_user? %>
    <div class="row">
      <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
        <i class="fa-solid fa-user-pen"></i>
      <% end %>
    </div>
  <% end %>

<h2 class="mt-3">New Book</h2>

<%= form_with model: book, local: true do |f| %>
  <div class="form-group">
    <label for="book_title">Title</label>
    <%= f.text_field :title, class: "form-control", id: "book_title" %>
  </div>

  <div class="form-group">
    <label for="book_opinion">Opinion</label>
    <%= f.text_area :body, class: "form-control", id: "book_opinion" %>
  </div>

  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-tenge-sign"></i></span>
    </div>
    <%= f.text_field :zipcode, class: "form-control", placeholder: "Postal Code" %>
  </div>

  <div class="input-group mb-3 mt-4">
    <div class="input-group-prepend">
      <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-location-dot"></i></span>
    </div>
    <%= f.text_field :address, class: "form-control", placeholder: "Address" %>
  </div>

  <div class="form-group">
    <%= f.submit "Create Book", class: "btn btn-success", data: { disable_with: "Creating..." } %>
  </div>
<% end %>



  <%= javascript_pack_tag "jpostal", 'data-turbolinks-track': 'reload' %>
</div>
