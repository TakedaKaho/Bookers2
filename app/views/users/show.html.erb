<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'devise/shared/sidebar', user: @user, book: @book_new %>
    </div>
    
    <div class="col-md-8 offset-md-1">
      <h2>My Books</h2>
      
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th colspan="2"></th>
            <th>Date</th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to user_path(book.user.id) do %></td>
                <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
              <% end %>
              <td><%= book.created_at.strftime("%Y-%m-%d") %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
    </div>
    
  </div>
</div>
