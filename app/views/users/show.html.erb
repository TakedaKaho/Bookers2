<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>
<h4>name</h4>
<%= @user.name %>
<h4>introduction</h4>
<%= @user.introduction %> 

<% if @user == current_user %>
<%= link_to edit_user_path(@user.id) do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>
<% else %>
<%= link_to user_path(current_user.id) do %>
<i class="fa-solid fa-user-gear"></i>
<% end %>
<% end %>