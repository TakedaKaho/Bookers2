<% if @user.errors.any? %>
  <%= @user.errors.count %>件のエラーが発生しました
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>

<%= form_with model: @user do |f| %>
<h4>name</h4>
<%= f.text_field :name %>
<h4>image</h4>
<%= f.file_field :profile_image, accept: "image/*" %>

<h4>introduction</h4>
<%= f.text_area :introduction %>

<%= f.submit 'Update User' %>
<% end %>