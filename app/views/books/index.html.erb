<% if @book.errors.any? %>
<div>
  <h3><%= @book.errors.count %>件のエラーが発生しました</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<%= render 'devise/shared/sidebar', user: current_user, book: @book %>

<h1>Books</h1>

<div class ="titles">
    <h4>Title</h4>
    <h4>Opinion</h4>
</div>

<% @books.each do |book| %>
<%= link_to user_path(book.user.id) do %>
<%= image_tag book.user.get_profile_image(100, 100) %>
<% end %>
 <%=link_to book.title,book_path(book.id) %>
 <%= book.body %>
 <% end %>