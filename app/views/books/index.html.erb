<% if @book.errors.any? %>
<div>
  <h3><%= @book.errors.count %>件のエラーが発生しました</h3>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>

<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">

<%= render 'devise/shared/sidebar', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">

<h2>Books</h2>

 <table class="table table-hover table-inverse">
   <thead>
    <tr>
      <th colspan="2"></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  
 <% @books.each do |book| %>

  <tbody>
    <tr>
     <td><%= link_to user_path(book.user.id) do %></td>
     <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
 <% end %>
      <td><%=link_to book.title,book_path(book.id) %></td>
      <td><%= book.body %></td>
 <% end %>
    </tr>
  </tbody>
  
 </table>
 
 </div>